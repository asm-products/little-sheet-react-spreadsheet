{
  "name": "react-microspreadsheet",
  "version": "0.0.2",
  "description": "A pluggable spreadsheet component.",
  "main": "main.js",
  "dependencies": {
    "formulajs": "~0.0.29",
    "mousetrap": "*",
    "mori": ">=0.2.x"
  },
  "peerDependencies": {
    "react": "*"
  },
  "devDependencies": {
    "coffee-script": "^1.8.0",
    "coffeeify": "^0.7.0",
    "browserify": "^5.11.0",
    "less": "^1.7.4",
    "mocha": "^1.21.4",
    "jquery": "^2.1.1",
    "chai": "^1.9.1"
  },
  "scripts": {
    "prepublish": "./node_modules/.bin/lessc --clean-css style.less react-microspreadsheet.css && ./node_modules/.bin/coffee -c main.coffee",
    "test-phantom": "./node_modules/.bin/browserify -t coffeeify ./tests/tests.coffee > ./tests/bundle.js && mocha-phantomjs ./tests/index.html",
    "test-browser": "./node_modules/.bin/browserify -t coffeeify ./tests/tests.coffee > ./tests/bundle.js && python -m SimpleHTTPServer 4000"
  },
  "keywords": [
    "spreadsheet",
    "sheet"
  ],
