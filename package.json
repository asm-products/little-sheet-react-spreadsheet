{
  "name": "react-microspreadsheet",
  "version": "0.1.44",
  "description": "A pluggable spreadsheet component.",
  "main": "lib/Spreadsheet.js",
  "dependencies": {
    "formulajs": "1.0.2",
    "mousetrap": "*",
    "mori": ">=0.2.x",
    "wolfy-eventemitter": "^0.1.0",
    "selix": "^1.1.0"
  },
  "peerDependencies": {
    "react": "*"
  },
  "devDependencies": {
    "coffee-loader": "^0.7.2",
    "webpack": "^1.4.0-beta5",
    "coffee-script": "^1.8.0",
    "less": "^1.7.4",
    "mocha": "^1.21.4",
    "jquery": "^2.1.1",
    "chai": "^1.9.1"
  },
  "scripts": {
    "prepublish": "npm run compile-css && ./node_modules/.bin/coffee -c --bare --output lib/ src/",
    "compile-css": "./node_modules/.bin/lessc --clean-css style.less react-microspreadsheet.css",
    "test-phantom": "webpack --entry ./tests/tests.coffee ./tests/tests.coffee ./tests/bundle.js && mocha-phantomjs ./tests/index.html",
    "test-browser": "webpack --entry ./tests/tests.coffee ./tests/tests.coffee ./tests/bundle.js && python -m SimpleHTTPServer 4000",
    "test": "npm run test-phantom",
    "host": "npm run compile-css && webpack --entry ./src/browser.coffee ./dist/microspreadsheet.js && python -m SimpleHTTPServer 3000"
  },
  "keywords": [
    "react-component",
    "spreadsheet"
  ],
  "author": "Giovanni T. Parra",
  "license": "MIT"
}
